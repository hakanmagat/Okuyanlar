@using System.Linq
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Okuyanlar.Core.Entities.Book>

@{
    ViewData["Title"] = "Top 10 Rated Books";
}

<div class="ok-section">
    <div class="container ok-container">

        <div class="ok-flex ok-items-center ok-justify-between ok-mb-4 ok-flex-wrap ok-gap-2">
            <h1 style="font-weight:900;">
                <i class="bi bi-star-fill me-2" style="color:var(--ok-accent);"></i>
                Top 10 Rated Books
            </h1>

            <span class="ok-badge ok-badge-accent">
                <i class="bi bi-award me-1"></i>
                Ranked by Rating
            </span>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="ok-table-responsive">
                <table class="ok-table">
                    <thead>
                        <tr>
                            <th style="width: 10%;">Rank</th>
                            <th style="width: 35%;">Title</th>
                            <th style="width: 25%;">Author</th>
                            <th style="width: 15%;">Rating</th>
                            <th style="width: 15%;">Reviews</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int rank = 1;
                        }
                        @foreach (var book in Model)
                        {
                            <tr>
                                <td>
                                    <span class="ok-badge ok-badge-accent" style="min-width: 45px; text-align: center;">
                                        #@rank
                                    </span>
                                </td>
                                <td>
                                    <strong>@book.Title</strong>
                                </td>
                                <td>@book.Author</td>
                                <td>
                                    <div class="ok-flex ok-items-center ok-gap-1">
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            if (i < Math.Floor(book.Rating))
                                            {
                                                <i class="bi bi-star-fill" style="color: #ffc107;"></i>
                                            }
                                            else if (i < book.Rating)
                                            {
                                                <i class="bi bi-star-half" style="color: #ffc107;"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star" style="color: #ccc;"></i>
                                            }
                                        }
                                        <span style="margin-left: 5px; font-weight: 600;">@book.Rating.ToString("F1")</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="ok-badge ok-badge-secondary">
                                        @book.RatingCount @(book.RatingCount == 1 ? "review" : "reviews")
                                    </span>
                                </td>
                            </tr>
                            rank++;
                        }
                    </tbody>
                </table>
            </div>

            <div style="margin-top: 40px;">
                <h3 style="margin-bottom: 20px;">Featured Books</h3>
                <div class="ok-grid ok-grid-3">
                    @{
                        rank = 1;
                    }
                    @foreach (var book in Model.Take(3))
                    {
                        <div class="ok-book-card" style="border: 2px solid var(--ok-accent); position: relative;">
                            <div style="position: absolute; top: 10px; right: 10px; z-index: 10;">
                                <span class="ok-badge ok-badge-accent" style="font-size: 14px; padding: 6px 12px; font-weight: 900;">
                                    #@rank
                                </span>
                            </div>

                            <img src="https://via.placeholder.com/300x400?text=@book.Title.Replace(" ", "+")"
                                 alt="@book.Title"
                                 class="ok-book-cover" />

                            <div class="ok-book-body">
                                <div class="ok-book-title">@book.Title</div>
                                <div class="ok-book-author">by @book.Author</div>

                                <div class="ok-book-meta" style="margin-bottom: 10px;">
                                    <div class="ok-flex ok-items-center ok-gap-1" style="margin-bottom: 8px;">
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            if (i < Math.Floor(book.Rating))
                                            {
                                                <i class="bi bi-star-fill" style="color: #ffc107;"></i>
                                            }
                                            else if (i < book.Rating)
                                            {
                                                <i class="bi bi-star-half" style="color: #ffc107;"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star" style="color: #ccc;"></i>
                                            }
                                        }
                                        <span style="margin-left: 5px; font-weight: 600;">@book.Rating.ToString("F1")</span>
                                    </div>
                                    <small style="color: #666;">@book.RatingCount reviews</small>
                                </div>

                                @if (book.Stock > 0)
                                {
                                    <span class="ok-badge ok-badge-success">Available</span>
                                }
                                else
                                {
                                    <span class="ok-badge ok-badge-secondary">Unavailable</span>
                                }

                                <a asp-controller="Books"
                                   asp-action="Details"
                                   asp-route-id="@book.Id"
                                   class="btn-ok-primary ok-mt-2" style="font-size: 0.9rem; text-align: center;">
                                    View Details
                                </a>
                            </div>
                        </div>
                        rank++;
                    }
                </div>
            </div>
        }
        else
        {
            <div class="ok-alert ok-alert-info">
                <i class="bi bi-info-circle me-2"></i>
                No rated books available yet.
            </div>
        }

        <div style="margin-top: 40px; text-align: center;">
            <a asp-controller="Books" asp-action="Index" class="btn-ok-secondary">
                <i class="bi bi-arrow-left me-2"></i>
                Back to Catalog
            </a>
        </div>
    </div>
</div>