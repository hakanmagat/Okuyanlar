@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Okuyanlar.Core.Entities.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="ok-section">
    <div class="container ok-container">
        @* bootstrap row yerine senin CSS'indeki ok-flex yapısını kullanarak garantiliyoruz *@
        <div class="ok-flex ok-gap-4 ok-flex-wrap" style="align-items: flex-start;">

            <div style="flex: 0 0 350px; max-width: 100%;">
                <div class="ok-card" style="margin-bottom: 2rem;">
                    @{ var coverUrl = string.IsNullOrWhiteSpace(Model.CoverUrl) ? "/images/book-placeholder.jpg" : Model.CoverUrl; }
                    <img src="@coverUrl"
                         alt="@Model.Title cover"
                         class="ok-book-cover"
                         style="height: 500px; width: 100%; object-fit: cover; display: block;"
                         onerror="this.src='/images/book-placeholder.jpg'" />
                </div>
            </div>

            <div style="flex: 1; min-width: 300px;">
                <div class="ok-card">
                    <div class="ok-card-body">

                        <h1 style="font-weight:900; margin-bottom:.25rem; font-size: 2.5rem;">
                            @Model.Title
                        </h1>
                        <p style="font-weight:700; opacity:.75; font-size: 1.2rem; margin-bottom: 1.5rem;">
                            by @Model.Author
                        </p>

                        <div class="ok-mb-3">
                            <span class="ok-badge ok-badge-accent">ISBN</span>
                            <span style="font-weight:800; margin-left:.5rem; color: var(--ok-title);">
                                @Model.ISBN
                            </span>
                        </div>

                        <hr style="border: 0; border-top: 1px solid var(--ok-border); margin: 1.5rem 0;">

                        <div class="ok-card ok-mt-3" style="box-shadow: var(--ok-shadow-sm); background: rgba(0,0,0,0.02);">
                            <div class="ok-card-body">
                                <div class="ok-mb-3" style="display:flex; align-items:center; gap:.75rem;">
                                    <div title="Average rating" style="display:flex; align-items:center; gap:.25rem;">
                                        <span style="font-weight:800; color: var(--ok-title);">@Math.Round(Model.Rating, 1)</span>
                                        <span style="color:#f5a623; font-size:1.25rem; line-height:1;">★</span>
                                        <span style="opacity:.7;">(@Model.RatingCount ratings)</span>
                                    </div>
                                </div>

                                <div class="ok-mb-3" style="display:flex; align-items:center; gap:.5rem;">
                                    <span style="font-weight:700; color: var(--ok-text);">Rate this book:</span>
                                    <div id="rate-stars" aria-label="Rate from 1 to 5 stars" style="display:inline-flex; gap:.25rem;">
                                        <button type="button" class="ok-star" data-star="1" aria-label="1 star" title="1 star">★</button>
                                        <button type="button" class="ok-star" data-star="2" aria-label="2 stars" title="2 stars">★</button>
                                        <button type="button" class="ok-star" data-star="3" aria-label="3 stars" title="3 stars">★</button>
                                        <button type="button" class="ok-star" data-star="4" aria-label="4 stars" title="4 stars">★</button>
                                        <button type="button" class="ok-star" data-star="5" aria-label="5 stars" title="5 stars">★</button>
                                    </div>
                                </div>

                                @if (Model.Stock > 0)
                                {
                                    <span class="ok-badge ok-badge-success">Available</span>

                                    <p class="ok-mt-2" style="font-weight:700; color: var(--ok-text);">
                                        This book is currently available for borrowing.
                                    </p>

                                    <button class="btn-ok-primary ok-mt-2"
                                            onclick="OkToast.success('Borrow request sent', 'Request')">
                                        <i class="bi bi-journal-check me-2"></i>
                                        Borrow Book
                                    </button>
                                }
                                else
                                {
                                    <span class="ok-badge ok-badge-secondary">Unavailable</span>

                                    <p class="ok-mt-2" style="font-weight:700; color: var(--ok-text);">
                                        This book is currently borrowed by another member.
                                    </p>

                                    <div class="ok-flex ok-gap-2 ok-flex-wrap">
                                        <button class="btn-ok-primary"
                                                onclick="OkToast.info('You are added to the reservation list', 'Reserved')">
                                            <i class="bi bi-clock-history me-2"></i>
                                            Reserve
                                        </button>

                                        <button class="btn-ok-secondary"
                                                onclick="OkToast.info('You will be notified when available', 'Notification')">
                                            <i class="bi bi-bell me-2"></i>
                                            Notify Me
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="ok-mt-4">
                            <a asp-action="Index" class="btn-ok-secondary" style="display: inline-flex; align-items: center;">
                                <i class="bi bi-arrow-left me-2"></i>
                                Back to Catalog
                            </a>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .ok-star {
        all: unset;
        cursor: pointer;
        font-size: 1.75rem;
        line-height: 1;
        color: #c9c9c9;
        transition: color .15s ease;
        padding: .1rem .2rem;
        border-radius: .25rem;
    }
    .ok-star:hover,
    .ok-star.active {
        color: #f5a623;
    }
</style>

<script>
    (function () {
        const container = document.getElementById('rate-stars');
        if (!container) return;

        const stars = Array.from(container.querySelectorAll('.ok-star'));
        let selected = 0;

        function paint(n) {
            stars.forEach((s, i) => {
                s.classList.toggle('active', i < n);
            });
        }

        stars.forEach(star => {
            star.addEventListener('mouseenter', () => paint(parseInt(star.dataset.star)));
            star.addEventListener('mouseleave', () => paint(selected));
            star.addEventListener('click', async () => {
                selected = parseInt(star.dataset.star);
                paint(selected);
                await sendRating(@Model.Id, selected);
            });
        });

        async function sendRating(bookId, rating) {
            try {
                const resp = await fetch('/Books/Rate', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: new URLSearchParams({ bookId: String(bookId), rating: String(rating) })
                });
                const data = await resp.json();
                if (data && data.success) {
                    OkToast && OkToast.success('Thanks for rating!', 'Rated');
                    // Optionally refresh page or update average via another call.
                } else {
                    throw new Error(data?.message || 'Rating failed');
                }
            } catch (err) {
                console.error(err);
                OkToast && OkToast.error('Could not submit rating', 'Error');
            }
        }
    })();
</script>