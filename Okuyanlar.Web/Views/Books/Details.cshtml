@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Okuyanlar.Core.Entities.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="ok-section">
    <div class="container ok-container">
        @* bootstrap row yerine senin CSS'indeki ok-flex yapısını kullanarak garantiliyoruz *@
        <div class="ok-flex ok-gap-4 ok-flex-wrap" style="align-items: flex-start;">

            <div style="flex: 0 0 350px; max-width: 100%;">
                <div class="ok-card" style="margin-bottom: 2rem;">
                    @{ var coverUrl = string.IsNullOrWhiteSpace(Model.CoverUrl) ? "/images/book-placeholder.jpg" : Model.CoverUrl; }
                    <img src="@coverUrl"
                         alt="@Model.Title cover"
                         class="ok-book-cover"
                         style="height: 500px; width: 100%; object-fit: cover; display: block;"
                         onerror="this.src='/images/book-placeholder.jpg'" />
                </div>
            </div>

            <div style="flex: 1; min-width: 300px;">
                <div class="ok-card">
                    <div class="ok-card-body">

                        <h1 style="font-weight:900; margin-bottom:.25rem; font-size: 2.5rem;">
                            @Model.Title
                        </h1>
                        <p style="font-weight:700; opacity:.75; font-size: 1.2rem; margin-bottom: 1.5rem;">
                            by @Model.Author
                        </p>

                        <div class="ok-mb-3">
                            <span class="ok-badge ok-badge-accent">ISBN</span>
                            <span style="font-weight:800; margin-left:.5rem; color: var(--ok-title);">
                                @Model.ISBN
                            </span>
                        </div>

                        <hr style="border: 0; border-top: 1px solid var(--ok-border); margin: 1.5rem 0;">

                        <div class="ok-card ok-mt-3" style="box-shadow: var(--ok-shadow-sm); background: rgba(0,0,0,0.02);">
                            <div class="ok-card-body">
                                <div class="ok-mb-3" style="display:flex; align-items:center; gap:.75rem;">
                                    <div title="Average rating" style="display:flex; align-items:center; gap:.25rem;">
                                        <span style="font-weight:800; color: var(--ok-title);">@Math.Round(Model.Rating, 1)</span>
                                        <span style="color:#f5a623; font-size:1.25rem; line-height:1;">★</span>
                                        <span style="opacity:.7;">(@Model.RatingCount ratings)</span>
                                    </div>
                                </div>

                                @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("EndUser"))
                                {
                                    @if (ViewBag.UserRating != null && (decimal)ViewBag.UserRating > 0)
                                    {
                                        <div class="ok-mb-3" style="padding: 0.75rem; background: rgba(245, 166, 35, 0.1); border-radius: 0.5rem; border-left: 3px solid #f5a623;">
                                            <span style="font-weight:700; color: var(--ok-text); display:block; margin-bottom:0.5rem;">
                                                <i class="bi bi-check-circle-fill" style="color: #f5a623; margin-right: 0.5rem;"></i>
                                                Your rating:
                                            </span>
                                            <div style="display:flex; align-items:center; gap:.25rem;">
                                                @for (int i = 0; i < 5; i++)
                                                {
                                                    if (i < (int)(decimal)ViewBag.UserRating)
                                                    {
                                                        <span style="color: #f5a623; font-size: 1.5rem; line-height: 1;">★</span>
                                                    }
                                                    else
                                                    {
                                                        <span style="color: #e0e0e0; font-size: 1.5rem; line-height: 1;">★</span>
                                                    }
                                                }
                                                <span style="margin-left: 0.5rem; font-weight: 800; color: var(--ok-title);">@ViewBag.UserRating</span>
                                            </div>
                                        </div>
                                    }

                                    <div class="ok-mb-3" style="display:flex; align-items:center; gap:.5rem;">
                                        <span style="font-weight:700; color: var(--ok-text);">@(ViewBag.UserRating != null && (decimal)ViewBag.UserRating > 0 ? "Update your rating:" : "Rate this book:")</span>
                                        <div id="rate-stars" aria-label="Rate from 1 to 5 stars" style="display:inline-flex; gap:.25rem;">
                                            <button type="button" class="ok-star" data-star="1" aria-label="1 star" title="1 star">★</button>
                                            <button type="button" class="ok-star" data-star="2" aria-label="2 stars" title="2 stars">★</button>
                                            <button type="button" class="ok-star" data-star="3" aria-label="3 stars" title="3 stars">★</button>
                                            <button type="button" class="ok-star" data-star="4" aria-label="4 stars" title="4 stars">★</button>
                                            <button type="button" class="ok-star" data-star="5" aria-label="5 stars" title="5 stars">★</button>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="ok-mb-3" style="display:flex; align-items:center; gap:.5rem;">
                                        <span class="ok-badge ok-badge-secondary">Login as member to rate</span>
                                    </div>
                                }

                                @if (Model.Stock > 0)
                                {
                                    <span class="ok-badge ok-badge-success">Available</span>

                                    <p class="ok-mt-2" style="font-weight:700; color: var(--ok-text);">
                                        This book is currently available for borrowing.
                                    </p>

                                    <button class="btn-ok-primary ok-mt-2"
                                            onclick="OkToast.success('Borrow request sent', 'Request')">
                                        <i class="bi bi-journal-check me-2"></i>
                                        Borrow Book
                                    </button>
                                }
                                else
                                {
                                    <span class="ok-badge ok-badge-secondary">Unavailable</span>

                                    <p class="ok-mt-2" style="font-weight:700; color: var(--ok-text);">
                                        This book is currently borrowed by another member.
                                    </p>

                                    <div class="ok-flex ok-gap-2 ok-flex-wrap">
                                        <button class="btn-ok-primary"
                                                onclick="OkToast.info('You are added to the reservation list', 'Reserved')">
                                            <i class="bi bi-clock-history me-2"></i>
                                            Reserve
                                        </button>

                                        <button class="btn-ok-secondary"
                                                onclick="OkToast.info('You will be notified when available', 'Notification')">
                                            <i class="bi bi-bell me-2"></i>
                                            Notify Me
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="ok-mt-4">
                            <a asp-action="Index" class="btn-ok-secondary" style="display: inline-flex; align-items: center;">
                                <i class="bi bi-arrow-left me-2"></i>
                                Back to Catalog
                            </a>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .ok-star {
        all: unset;
        cursor: pointer;
        font-size: 1.75rem;
        line-height: 1;
        color: #c9c9c9;
        transition: color .15s ease;
        padding: .1rem .2rem;
        border-radius: .25rem;
    }
    .ok-star:hover,
    .ok-star.active {
        color: #f5a623;
    }
</style>

<script>
    (function () {
        const container = document.getElementById('rate-stars');
        if (!container) return;

        const stars = Array.from(container.querySelectorAll('.ok-star'));
        let selected = 0;

        // Load user's previous rating if available
        const userRatingStr = '@(ViewBag.UserRating != null ? ((decimal)ViewBag.UserRating).ToString(System.Globalization.CultureInfo.InvariantCulture) : "0")';
        const userRatingValue = parseFloat(userRatingStr);
        if (!isNaN(userRatingValue) && userRatingValue > 0) {
            selected = userRatingValue;
        }

        function paint(n) {
            stars.forEach((s, i) => {
                s.classList.toggle('active', i < n);
            });
        }

        // Initialize display with selected rating
        if (selected > 0) {
            paint(selected);
        }

        stars.forEach(star => {
            star.addEventListener('mouseenter', () => paint(parseInt(star.dataset.star)));
            star.addEventListener('mouseleave', () => paint(selected));
            star.addEventListener('click', async (e) => {
                console.log('Star clicked:', e.target.dataset.star);
                e.preventDefault();
                const newRating = parseInt(e.target.dataset.star);
                selected = newRating;
                paint(selected);
                console.log('Calling sendRating with bookId:', @Model.Id, 'rating:', newRating);
                await sendRating(@Model.Id, newRating);
            });
        });

        async function sendRating(bookId, rating) {
            try {
                console.log('sendRating called with:', { bookId, rating });
                
                const formData = new FormData();
                formData.append('bookId', String(bookId));
                formData.append('rating', String(rating));

                console.log('Sending POST to /Books/Rate');
                const resp = await fetch('/Books/Rate', {
                    method: 'POST',
                    body: formData
                });
                
                console.log('Response received - Status:', resp.status);
                const text = await resp.text();
                console.log('Response text:', text);
                
                let data = {};
                try {
                    data = JSON.parse(text);
                    console.log('Parsed JSON:', data);
                } catch (e) {
                    console.error('Failed to parse JSON:', e, 'Raw text:', text);
                }
                
                if (resp.ok && data.success) {
                    console.log('Rating submitted successfully');
                    if (window.OkToast) OkToast.success('Thanks for rating!', 'Rated');
                    setTimeout(() => {
                        console.log('Reloading page...');
                        location.reload();
                    }, 500);
                } else {
                    const msg = data?.message || `HTTP ${resp.status}`;
                    console.error('Rating submission failed:', msg);
                    if (window.OkToast) OkToast.error('Rating failed: ' + msg, 'Error');
                }
            } catch (err) {
                console.error('Rating error:', err.message);
                if (window.OkToast) OkToast.error('Error: ' + err.message, 'Error');
            }
        }
    })();
</script>