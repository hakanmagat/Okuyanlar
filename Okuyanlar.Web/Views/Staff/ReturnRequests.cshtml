@model IEnumerable<Okuyanlar.Core.Entities.BookBorrow>
@{
    ViewData["Title"] = "Return Requests";
}

<div class="container mt-4">
    <h2>Return Requests</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            There are no pending return requests.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Book</th>
                        <th>User</th>
                        <th>Borrowed At</th>
                        <th>Due Date</th>
                        <th>Return Requested At</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var borrow in Model)
                    {
                        <tr class="@(borrow.Status == "Overdue" ? "table-warning" : "")">
                            <td>
                                <strong>@borrow.Book?.Title</strong><br />
                                <small>by @borrow.Book?.Author</small><br />
                                <small>ISBN: @borrow.Book?.ISBN</small>
                            </td>
                            <td>
                                <strong>@borrow.User?.Username</strong><br />
                                <small>@borrow.User?.Email</small>
                            </td>
                            <td>@borrow.BorrowedAt.ToLocalTime().ToString("MMM dd, yyyy")</td>
                            <td>
                                @borrow.DueDate.ToLocalTime().ToString("MMM dd, yyyy")
                                @{
                                    var daysLeft = (borrow.DueDate - DateTime.UtcNow).Days;
                                    if (daysLeft >= 0)
                                    {
                                        <br /><small class="text-muted">(@daysLeft days left)</small>
                                    }
                                    else
                                    {
                                        <br /><small class="text-danger">(Overdue by @(-daysLeft) days)</small>
                                    }
                                }
                            </td>
                            <td>@borrow.ReturnRequestedAt?.ToLocalTime().ToString("MMM dd, yyyy HH:mm")</td>
                            <td>
                                @if (borrow.Status == "Overdue")
                                {
                                    <span class="badge bg-danger">Overdue</span>
                                }
                                else if (borrow.Status == "ReturnRequested" || borrow.Status == "Active")
                                {
                                    <span class="badge bg-warning">Return Requested</span>
                                }
                            </td>
                            <td>
                                <form method="post" action="@Url.Action("AcceptReturn", "Staff")" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="borrowId" value="@borrow.Id" />
                                    <button type="submit" class="btn btn-success btn-sm">Accept Return</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-3">
        <a href="@Url.Action("BorrowsManage", "Staff")" class="btn btn-secondary">Back to Borrowed Books</a>
    </div>
</div>
