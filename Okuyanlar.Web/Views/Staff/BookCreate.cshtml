@model Okuyanlar.Core.Entities.Book
@{ ViewData["Title"] = "Add Book"; }

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-journal-plus me-2"></i>Add New Book</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Staff" asp-action="BookCreate" method="post">                        
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label fw-bold">Book Title</label>
                                <input asp-for="Title" class="form-control" placeholder="e.g. Clean Code" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Author" class="form-label fw-bold">Author</label>
                                <input asp-for="Author" class="form-control" placeholder="e.g. Robert C. Martin" />
                                <span asp-validation-for="Author" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ISBN" class="form-label fw-bold">ISBN</label>
                                <input asp-for="ISBN" class="form-control" placeholder="978-..." />
                                <span asp-validation-for="ISBN" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Stock" class="form-label fw-bold">Stock Quantity</label>
                                <input asp-for="Stock" class="form-control" type="number" min="0" value="1" />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-check form-switch mb-4">
                            <input asp-for="IsActive" class="form-check-input" checked />
                            <label asp-for="IsActive" class="form-check-label">Is Available for Borrowing?</label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success px-4">Save to Inventory</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }