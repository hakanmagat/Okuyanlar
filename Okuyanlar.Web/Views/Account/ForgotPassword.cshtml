@{
    ViewData["Title"] = "Parola Sýfýrlama";
}

<div class="container" style="max-width: 720px; padding-top: 3rem;">
    <div class="ok-card">
        <div class="ok-card-header" style="display:flex; align-items:center; gap:.75rem;">
            <i class="bi bi-key-fill" style="font-size:1.2rem;"></i>
            <span>Parola Sýfýrlama</span>
        </div>

        <div class="ok-card-body">
            <p style="margin-bottom:1.25rem; opacity:.85;">
                Hesabýna ait e-postayý gir. Sýfýrlama kodunu o adrese göndereceðiz.
            </p>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger d-flex align-items-center mb-3" role="alert">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    <div>@ViewBag.Error</div>
                </div>
            }

            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success d-flex align-items-center mb-3" role="alert">
                    <i class="bi bi-check-circle me-2"></i>
                    <div>@ViewBag.Success</div>
                </div>
            }

            <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="ok-flex ok-flex-col ok-gap-2">
                @Html.AntiForgeryToken()

                <div>
                    <label class="ok-form-label">E-posta</label>
                    <div class="ok-input-group">
                        <span class="ok-input-group-text"><i class="bi bi-envelope"></i></span>
                        <input type="email"
                               name="email"
                               class="ok-form-control"
                               required
                               placeholder="name@example.com" />
                    </div>
                    <small class="text-muted" style="display:block; margin-top:.4rem;">
                        Kod 5–10 dakika içinde gelir. Spam klasörünü de kontrol et.
                    </small>
                </div>

                <div class="ok-mt-3 ok-flex ok-justify-between ok-items-center" style="gap:1rem; flex-wrap:wrap;">
                    <a asp-controller="Account" asp-action="Login" class="btn-ok-secondary" style="text-align:center;">
                        <i class="bi bi-arrow-left me-2"></i> Giriþe dön
                    </a>

                    <button type="submit" class="btn-ok-primary" style="min-width: 220px;">
                        <i class="bi bi-send-fill me-2"></i> Kodu Gönder
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
