@{
    ViewData["Title"] = "Code Sent";
    var masked = ViewBag.MaskedEmail as string; // backend can fill if available
}

<div class="container" style="max-width: 720px; padding-top: 3rem;">
    <div class="ok-card">
        <div class="ok-card-header" style="display:flex; align-items:center; gap:.75rem;">
            <i class="bi bi-envelope-check-fill" style="font-size:1.2rem;"></i>
            <span>Code Sent</span>
        </div>

        <div class="ok-card-body">
            <div class="ok-flex ok-items-center" style="gap:1rem; margin-bottom:1rem;">
                <div style="
                    width:56px; height:56px; border-radius:16px;
                    background: rgba(197,160,89,.25);
                    display:flex; align-items:center; justify-content:center;
                    border:1px solid rgba(40,29,22,.12);
                ">
                    <i class="bi bi-shield-check" style="font-size:1.6rem; color: var(--ok-btn);"></i>
                </div>

                <div>
                    <div style="font-weight:900; color: var(--ok-title); font-size:1.25rem;">
                        Your reset code is on its way ✅
                    </div>
                    <div style="opacity:.85;">
                        @if (!string.IsNullOrWhiteSpace(masked))
                        {
                            <span>We sent a code to <strong>@masked</strong>.</span>
                        }
                        else
                        {
                            <span>We sent a verification code to your email address.</span>
                        }
                    </div>
                </div>
            </div>

            <div class="ok-card" style="background: var(--ok-bg); border-radius:14px; box-shadow:none;">
                <div class="ok-card-body" style="padding:1rem 1.25rem;">
                    <div style="font-weight:800; margin-bottom:.35rem;">Tips</div>
                    <ul style="margin:0; padding-left:1.2rem; opacity:.85;">
                        <li>If the code does not arrive in 5–10 minutes, check spam.</li>
                        <li>If the email was wrong, you can try again.</li>
                    </ul>
                </div>
            </div>

            <div class="ok-mt-3 ok-flex ok-justify-between ok-items-center" style="gap:1rem; flex-wrap:wrap;">
                <a asp-controller="Account" asp-action="ForgotPassword" class="btn-ok-secondary">
                    <i class="bi bi-arrow-repeat me-2"></i> Resend
                </a>

                <a asp-controller="Account" asp-action="ResetPassword" class="btn-ok-primary" style="min-width: 260px; text-align:center;">
                    <i class="bi bi-key me-2"></i> Set New Password
                </a>
            </div>
        </div>
    </div>
</div>
