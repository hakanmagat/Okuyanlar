@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<nav class="navbar navbar-expand-lg ok-navbar">
    <div class="container ok-container">

        <a class="navbar-brand ok-brand" asp-controller="Home" asp-action="Index">
            <i class="bi bi-book-half me-2"></i>Okuyanlar
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#okNavbar"
                aria-controls="okNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="okNavbar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link ok-nav-link" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door me-1"></i> Home
                    </a>
                </li>

                 <!-- Catalog link: adjust controller/action if your routes differ.
                     Currently points to Catalog/Index as referenced in Index.cshtml. -->
                <li class="nav-item">
                    <a class="nav-link ok-nav-link" asp-controller="Catalog" asp-action="Index">
                        <i class="bi bi-search me-1"></i> Catalog
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link ok-nav-link" asp-controller="Home" asp-action="Privacy">
                        <i class="bi bi-shield-check me-1"></i> Privacy
                    </a>
                </li>
            </ul>

            <ul class="navbar-nav ms-auto align-items-lg-center gap-2">
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    @if (User.IsInRole("EndUser"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link ok-nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-collection me-1"></i>My Library
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="MyReservations"><i class="bi bi-calendar-check me-2"></i>My Reservations</a></li>
                                <li><a class="dropdown-item" asp-controller="Books" asp-action="MyBorrows"><i class="bi bi-book me-2"></i>My Borrowed Books</a></li>
                            </ul>
                        </li>
                    }

                    @if (User.IsInRole("Librarian"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link ok-nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear me-1"></i>Staff Tools
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Staff" asp-action="BookManage"><i class="bi bi-book-fill me-2"></i>Manage Books</a></li>
                                <li><a class="dropdown-item" asp-controller="Staff" asp-action="ReservationsManage"><i class="bi bi-calendar-check me-2"></i>Reservations</a></li>
                                <li><a class="dropdown-item" asp-controller="Staff" asp-action="BorrowsManage"><i class="bi bi-book me-2"></i>Borrowed Books</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Staff" asp-action="CheckInRequests"><i class="bi bi-inbox me-2"></i>Check-In Requests</a></li>
                                <li><a class="dropdown-item" asp-controller="Staff" asp-action="ReturnRequests"><i class="bi bi-inbox-fill me-2"></i>Return Requests</a></li>
                            </ul>
                        </li>
                    }

                    <li class="nav-item">
                        <form asp-controller="Account" asp-action="Profile" method="get">
                            @Html.AntiForgeryToken()
                            <button class="nav-link ok-nav-link">
                                <i class="bi bi-person-circle me-1"></i>@User.Identity!.Name
                            </button>
                        </form>
                    </li>

                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn-ok-primary ok-nav-btn">
                                    Logout
                                </button>
                            </form>
                        </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link ok-nav-link" asp-controller="Account" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Login
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
