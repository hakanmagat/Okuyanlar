@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<nav class="navbar navbar-expand-lg ok-navbar">
    <div class="container ok-container">

        <a class="navbar-brand ok-brand" asp-controller="Home" asp-action="Index">
            <i class="bi bi-book-half me-2"></i>Okuyanlar
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#okNavbar"
                aria-controls="okNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="okNavbar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link ok-nav-link" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door me-1"></i> Home
                    </a>
                </li>

                <!-- Catalog linki: Controller/Action sende nasıl ise onu yaz.
                     Şu an Index.cshtml’de Catalog/Index diyordun, aynen bıraktım. -->
                <li class="nav-item">
                    <a class="nav-link ok-nav-link" asp-controller="Catalog" asp-action="Index">
                        <i class="bi bi-search me-1"></i> Catalog
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link ok-nav-link" asp-controller="Home" asp-action="Privacy">
                        <i class="bi bi-shield-check me-1"></i> Privacy
                    </a>
                </li>
            </ul>

            <ul class="navbar-nav ms-auto align-items-lg-center gap-2">
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <li class="nav-item">
                        <span class="ok-nav-link" style="cursor:default;">
                            <i class="bi bi-person-circle me-1"></i>@User.Identity!.Name
                        </span>
                    </li>

                    <!-- Admin linki (role ismi sende Admin mı? farklıysa düzelt) -->
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link ok-nav-link" asp-controller="Staff" asp-action="Index">
                                <i class="bi bi-gear me-1"></i> Admin
                            </a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="btn btn-ok-primary" asp-controller="Account" asp-action="Logout">
                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link ok-nav-link" asp-controller="Account" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Login
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-ok-accent" asp-controller="Account" asp-action="Register">
                            <i class="bi bi-person-plus me-2"></i>Register
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
