@{
    ViewData["Title"] = "Error";
}

<div class="ok-section" style="padding-top:3rem; padding-bottom:3rem;">
    <div class="container ok-container">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <div class="ok-card text-center">
                    <div class="ok-card-header" style="justify-content:center;">
                        <div style="display:flex; align-items:center; gap:.75rem;">
                            <div style="width:44px;height:44px;border-radius:12px;background:rgba(217,83,79,.18);
                                        display:flex;align-items:center;justify-content:center;border:1px solid rgba(255,255,255,.16);">
                                <i class="bi bi-exclamation-triangle" style="font-size:1.2rem; color:#fff;"></i>
                            </div>
                            <div>
                                <div style="font-size:1.15rem; font-weight:900;">Something went wrong</div>
                                <div style="opacity:.9; font-weight:700; font-size:.9rem;">Please try again</div>
                            </div>
                        </div>
                    </div>

                    <div class="ok-card-body" style="padding:2.25rem;">
                        <h2 style="font-weight:900; margin-bottom:.75rem;">We hit a snag.</h2>
                        <p style="opacity:.85; font-weight:650; margin-bottom:1.5rem;">
                            The page failed to load or an unexpected error occurred.
                            You can go back home or return to the catalog.
                        </p>

                        <div class="ok-flex ok-justify-center ok-gap-2 ok-flex-wrap">
                            <a class="btn-ok-primary" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-2"></i>Home
                            </a>
                            <a class="btn-ok-secondary" asp-controller="Catalog" asp-action="Index">
                                <i class="bi bi-search me-2"></i>Catalog
                            </a>
                        </div>
                    </div>

                    <div class="ok-card-footer">
                        <small style="opacity:.75; font-weight:800;">
                            If this keeps happening, contact the system administrator.
                        </small>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
